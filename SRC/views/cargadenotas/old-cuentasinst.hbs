<div class="row">
    {{#each instCuenta}}
        <div class="col-xxl mt-4">
            <div class="card">
                <div class="row pt-2 px-2">
                    <div class="col-3">
                        <h4 class="card-title d-flex justify-content-between align-items-center">{{cuentaInstagram}}</h4>
                        <P class="text-muted ">{{date}}</P>
                    </div>
                    <div class="col-3">
                        <p >Seguidores a Cargar: <strong>{{cantidadSeguidores}}</strong></p>
                    </div>
                    <div class="col-2">
                        <p >USUARIO: <STRONG>{{nombre}}</STRONG></p>
                    </div>
                    <div class="col-4">
                        <div class="d-flex justify-content-sm-around align-items-center">
                        <button style="font-size: 11px;" class="btn btn-warning">NO ABONADO</button>
                        <form action="/cliente/delete/{{id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button style="font-size: 11px;" type="submit" class="btn btn-danger">ELIMINAR</button>
                        </form>
                        <a href="/cliente/edit/{{id}}"><i class="fas fa-edit"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto p-2 w-auto my-4">
            <div class="card-body d-grid gap-2">
                <h2>Hola {{user.nombre}}</h2>
                <p class="lead">No hay pedidos todavia!</p>
                <a class="btn btn-success btn-block" href="/cliente/nueva-carga">Crear Pedido</a>
            </div>
        </div>
    {{/each}}
</div>